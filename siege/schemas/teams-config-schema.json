{
	"$schema": "https://json-schema.org/draft/2020-12/schema",
	"$id": "https://example.com/teams-config-schema.json",
	"title": "Siege teams list schema",
	"description": "Defines a list of participating teams",
	"type": "object",
	"properties": {
		"teams": {
			"type": "array",
			"items": {
				"type": "object",
				"properties": {
					"name": { "type": "string" },
					"email": { "type": "string" }
				},
				"required": ["name"],
				"additionalProperties": false
			}
		}
	},
	"required": ["teams"],
	"additionalProperties": false
}